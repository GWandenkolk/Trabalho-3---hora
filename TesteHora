/**
 *
 * @author LOWCOST
 */
public class TesteHora {

    public static void main(String[] args) {
        // Testando o construtor sem parâmetros
        System.out.println("Testando o construtor sem parâmetros:");
        Hora hora1 = new Hora();
        System.out.println("Hora 1 (formato 1): " + hora1.getHora1());
        System.out.println("Hora 1 (formato 2): " + hora1.getHora2());
        System.out.println("Total de segundos da Hora 1: " + hora1.getSegundos());
        System.out.println();

        // Testando o construtor com parâmetros
        System.out.println("Testando o construtor com parâmetros:");
        Hora hora2 = new Hora(15, 30, 45);
        System.out.println("Hora 2 (formato 1): " + hora2.getHora1());
        System.out.println("Hora 2 (formato 2): " + hora2.getHora2());
        System.out.println("Total de segundos da Hora 2: " + hora2.getSegundos());
        System.out.println();

        // Testando os métodos setters
        System.out.println("Testando os métodos setters:");
        hora1.setHor(10);
        hora1.setMin(20);
        hora1.setSeg(30);
        System.out.println("Hora 1 atualizada (formato 1): " + hora1.getHora1());
        System.out.println("Hora 1 atualizada (formato 2): " + hora1.getHora2());
        System.out.println("Total de segundos da Hora 1 atualizada: " + hora1.getSegundos());
        System.out.println();

        // Testando os métodos getters
        System.out.println("Testando os métodos getters:");
        System.out.println("Hora da Hora 2: " + hora2.getHor());
        System.out.println("Minutos da Hora 2: " + hora2.getMin());
        System.out.println("Segundos da Hora 2: " + hora2.getSeg());
        System.out.println();

        // Testando o método getSegundos
        System.out.println("Testando o método getSegundos:");
        System.out.println("Total de segundos da Hora 2: " + hora2.getSegundos());
        System.out.println();
    }
}
