package trabalho.pkg3;

import java.util.Scanner;

/**
 *
 * @author LOWCOST
 */
class Hora {
   
     private int hora;
    private int min;
    private int seg;

    public Hora() {
        Scanner scanner = new Scanner(System.in);
        do {
            try {
                System.out.print("Digite a hora: ");
                setHor(scanner.nextInt());
                System.out.print("Digite os minutos: ");
                setMin(scanner.nextInt());
                System.out.print("Digite os segundos: ");
                setSeg(scanner.nextInt());
            } catch (Exception e) {
                System.out.println("Valor inválido. Digite novamente.");
                scanner.nextLine(); // Limpa o buffer do scanner
            }
        } while (hora < 0 || hora > 23 || min < 0 || min > 59 || seg < 0 || seg > 59);
    }

    public Hora(int h, int m, int s) {
        setHor(h);
        setMin(m);
        setSeg(s);
    }

    public void setHor(int h) {
        if (h >= 0 && h <= 23)
            this.hora = h;
        else
            throw new IllegalArgumentException("Hora inválida.");
    }

    public void setMin(int m) {
        if (m >= 0 && m <= 59)
            this.min = m;
        else
            throw new IllegalArgumentException("Minuto inválido.");
    }

    public void setSeg(int s) {
        if (s >= 0 && s <= 59)
            this.seg = s;
        else
            throw new IllegalArgumentException("Segundo inválido.");
    }

    public void setHor() {
        Scanner scanner = new Scanner(System.in);
        do {
            try {
                System.out.print("Digite a hora: ");
                setHor(scanner.nextInt());
            } catch (Exception e) {
                System.out.println("Valor inválido. Digite novamente.");
                scanner.nextLine(); // Limpa o buffer do scanner
            }
        } while (hora < 0 || hora > 23);
    }

    public void setMin() {
        Scanner scanner = new Scanner(System.in);
        do {
            try {
                System.out.print("Digite os minutos: ");
                setMin(scanner.nextInt());
            } catch (Exception e) {
                System.out.println("Valor inválido. Digite novamente.");
                scanner.nextLine(); // Limpa o buffer do scanner
            }
        } while (min < 0 || min > 59);
    }

    public void setSeg() {
        Scanner scanner = new Scanner(System.in);
        do {
            try {
                System.out.print("Digite os segundos: ");
                setSeg(scanner.nextInt());
            } catch (Exception e) {
                System.out.println("Valor inválido. Digite novamente.");
                scanner.nextLine(); // Limpa o buffer do scanner
            }
        } while (seg < 0 || seg > 59);
    }

    public int getHor() {
        return hora;
    }

    public int getMin() {
        return min;
    }

    public int getSeg() {
        return seg;
    }

    public String getHora1() {
        return String.format("%02d:%02d:%02d", hora, min, seg);
    }

    public String getHora2() {
        String period = "AM";
        int hora12 = hora;
        if (hora12 >= 12) {
            period = "PM";
            if (hora12 > 12)
                hora12 -= 12;
        }
        return String.format("%02d:%02d:%02d %s", hora12, min, seg, period);
    }

    public int getSegundos() {
        return hora * 3600 + min * 60 + seg;
    }
    
}

